<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:tizen="http://tizen.org/ns/widgets"
        id="mytv.app"
        version="1.0.0"
        viewmodes="maximized">
    <name>MyTV</name>
    <description>Smart TV app with remote navigation</description>

    <!-- Entry point (splash) -->
    <content src="splash.html"/>

    <!-- App icon (relative path for Tizen packaging) -->
    <icon src="icons/app-icon-192.png"/>

    <!-- Tizen application metadata -->
    <tizen:application id="mytv.app.Main"
                       package="mytv.app"
                       required_version="6.0"/>

    <!-- Target Tizen profile for Samsung TV -->
    <tizen:profile name="tv"/>

    <!-- Category is required for TV apps -->
    <tizen:category name="http://tizen.org/category/tv"/>

    <!-- Settings appropriate for TV apps -->
    <tizen:setting screen-orientation="landscape"
                   context-menu="disable"
                   background-support="disable"
                   encryption="disable"
                   install-location="auto"
                   hwkey-event="enable"/>

    <!-- Privileges (none required for this static app now) -->
    <!-- <tizen:privilege name=""/> -->

    <!-- Optional TV screen size features (not mandatory for packaging) -->
    <feature name="http://tizen.org/feature/screen.size.normal.1080.1920"/>
</widget>
