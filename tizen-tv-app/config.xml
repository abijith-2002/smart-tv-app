<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:tizen="http://tizen.org/ns/widgets"
        id="org.example.smarttv"
        version="1.0.0"
        viewmodes="maximized">
    <name>Smart TV App</name>
    <description>Samsung Tizen TV web application packaged from existing static assets.</description>
    <author href="https://example.org" email="dev@example.org">Example Org</author>
    <license href="https://opensource.org/licenses/MIT">MIT</license>

    <!-- Entry content: index.html located under web/ folder -->
    <content src="web/index.html"/>

    <!-- Default icon for the package -->
    <icon src="icons/tizen.png"/>

    <!-- Tizen application definition -->
    <tizen:application id="org.example.smarttv.Main"
                       package="org.example.smarttv"
                       required_version="9.0"
                       type="web"/>

    <!-- Target Samsung TV profile -->
    <tizen:profile name="tv"/>

    <!-- Category for TV apps -->
    <tizen:category name="http://tizen.org/category/tv"/>

    <!-- App settings for TV -->
    <tizen:setting screen-orientation="landscape"
                   context-menu="disable"
                   background-support="disable"
                   encryption="disable"
                   install-location="auto"
                   hwkey-event="enable"
                   launch-mode="single"/>

    <!-- Features -->
    <feature name="http://tizen.org/feature/screen.size.large"/>
    <!-- Samsung TVs expose tv.samsung on many SDKs; if not recognized by your SDK, remove this line -->
    <feature name="http://tizen.org/feature/tv.samsung"/>

    <!-- Privileges -->
    <tizen:privilege name="http://tizen.org/privilege/internet"/>
    <tizen:privilege name="http://tizen.org/privilege/tv.inputdevice"/>

    <!-- Metadata for remote/DPAD behavior hints (non-mandatory, aids tooling) -->
    <tizen:metadata key="supported.input.devices" value="remote,keyboard"/>
    <tizen:metadata key="dpad.navigation.enabled" value="true"/>

    <!-- Content dimensions hint (optional) -->
    <tizen:metadata key="ui.fullscreen" value="true"/>
    <tizen:metadata key="ui.orientation.landscape" value="true"/>
</widget>
