<?xml version="1.0" encoding="UTF-8"?>
<widget
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:tizen="http://tizen.org/ns/widgets"
  id="mytv.app" 
  version="1.0.0"
  viewmodes="maximized">

  <name>MyTV</name>
  <description>Smart TV web application configured for Tizen TV emulator.</description>
  <author href="https://example.com" email="dev@example.com">MyTV Author</author>

  <!-- Entry point (validated: index.html exists and is the splash) -->
  <content src="index.html" />

  <!-- Icons (validated: icon.png exists in this folder) -->
  <icon src="icon.png" />
  <tizen:icon section="tv" src="icon.png" />

  <!-- Tizen application metadata -->
  <tizen:application
    id="mytv.app.app"
    package="mytv.app"
    required_version="6.0" />

  <!-- Target Tizen profile -->
  <tizen:profile name="tv" />

  <!-- TV category -->
  <tizen:category name="http://tizen.org/category/tv" />

  <!-- Recommended TV settings (keep TV defaults intact) -->
  <tizen:setting
    screen-orientation="landscape"
    context-menu="disable"
    background-support="disable"
    encryption="disable"
    install-location="auto"
    hwkey-event="enable" />

  <!-- Access policy: allow loading local and potential remote content -->
  <access origin="*" subdomains="true" />

  <!-- Required privileges: internet for any remote assets or future networking -->
  <tizen:privilege name="http://tizen.org/privilege/internet" />

  <!-- Required features: TV profile and generic screen size support -->
  <feature name="http://tizen.org/feature/screen.size.all" />
  <feature name="http://tizen.org/feature/tv" />

</widget>
