<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:tizen="http://tizen.org/ns/widgets"
        id="mytv.app"
        version="1.0.0"
        viewmodes="maximized">
    <name>MyTV</name>
    <description>Smart TV app with remote/keyboard navigation</description>

    <!-- Entry point -->
    <content src="index.html"/>

    <!-- Icons (Tizen will pick appropriate sizes). We include 256x256 as requested. -->
    <icon src="icon.png"/>
    <icon src="icons/app-icon-96.png"/>
    <icon src="icons/app-icon-192.png"/>

    <!-- Tizen application metadata -->
    <tizen:application id="mytv.app.Main"
                       package="mytv.app"
                       required_version="6.0"/>

    <!-- Target profile for Samsung TV -->
    <tizen:profile name="tv"/>

    <!-- TV category -->
    <tizen:category name="http://tizen.org/category/tv"/>

    <!-- Typical settings for TV apps -->
    <tizen:setting screen-orientation="landscape"
                   context-menu="disable"
                   background-support="disable"
                   encryption="disable"
                   install-location="auto"
                   hwkey-event="enable"/>

    <!-- This app is static and local; no network privileges needed. Add more if features expand. -->
    <!-- Example additional privileges you might add later:
         <tizen:privilege name="http://tizen.org/privilege/internet"/>
    -->

    <!-- Ensure common TV screen support (optional but informative) -->
    <feature name="http://tizen.org/feature/screen.size.normal.1080.1920"/>
</widget>
